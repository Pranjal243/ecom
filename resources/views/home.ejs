<section class="body py-16">
    <div class="container mx-auto flex items-center justify-between">
        
        <div class="w-1/2">
            <h6 class="text-lg"><em>Need anything?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">We will get it for you!</h1>
            <button class="px-6 py-2 rounded-full text-white fond-bold mt-4 btn-primary" onClick="document.getElementById('middle').scrollIntoView();">Order Now</button>
        </div>

        <div class="w-1/2">
            <img src="/img/Grocery/departmental.png" alt="">
        
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8" id="middle">

    <h1 class="text-xl font-bold mb-8">All Items</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-12 gap-y-16">

        <% items.forEach(function(item) { %>

            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/Grocery/<%= item.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= item.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= item.size %></span>
    
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= item.price %></span>
                        <button data-item="<%= JSON.stringify(item) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
       
       <% }) %>

        

    </div>

</section>
